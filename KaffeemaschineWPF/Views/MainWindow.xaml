<Window
    x:Class="KaffeemaschineWPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:const="clr-namespace:KaffeemaschineWPF.Const"
    Title="Ronnys Coffeeshop"
    SizeToContent="WidthAndHeight"
    Width="{Binding ActualWidth,ElementName=ContentControl}"
    Height="{Binding ActualHeight,ElementName=ContentControl}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <e:Interaction.Triggers>
        <e:EventTrigger EventName="Loaded">
            <e:InvokeCommandAction Command="{Binding MainWindowLoadedCommand}" />
        </e:EventTrigger>
    </e:Interaction.Triggers>
    <Grid>
        <ContentControl prism:RegionManager.RegionName="{x:Static const:Regions.CONTENT_REGION}" x:Name="ContentControl"/>
    </Grid>
</Window>
