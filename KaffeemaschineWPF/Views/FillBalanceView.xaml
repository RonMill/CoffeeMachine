<UserControl
    x:Class="KaffeemaschineWPF.Views.FillBalanceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:KaffeemaschineWPF.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:KaffeemaschineWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:KaffeemaschineWPF.ViewModels"
    Width="250"
    Height="150"
    d:DataContext="{d:DesignInstance Type=viewmodels:FillBalancelViewModel}"
    d:DesignHeight="150"
    d:DesignWidth="250"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <Label
            Margin="5"
            HorizontalAlignment="Center"
            Content="Guthaben aufladen"
            FontSize="20" />
        <TextBox Margin="5" Text="{Binding RefillBalanceAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <e:Interaction.Behaviors>
                <b:TextBoxBehavior AllowWhiteSpaces="False" RegExPattern="[0-9]" />
            </e:Interaction.Behaviors>
        </TextBox>
        <Button
            Width="75"
            Height="25"
            Margin="5"
            HorizontalAlignment="Center"
            Command="{Binding RefillBalanceCommand}"
            CommandParameter="true"
            Content="Aufladen"
            IsDefault="True" />
    </StackPanel>
</UserControl>
